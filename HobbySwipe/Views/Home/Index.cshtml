@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/gsap.min.js"></script>
    <script type="text/javascript" src="~/lib/glide/dist/glide.min.js"></script>

    <script type="text/javascript">
        ///////////////////////////////////////////
        // Resizing Slider

        const inputs = document.querySelectorAll("input");
        const div = document.querySelector("li");

        function handleInputChange() {
            const units = this.dataset.units || "";

            document.documentElement.style.setProperty(
                `--${this.name}`,
                this.value + units
            );
        }

        inputs.forEach((input) => input.addEventListener("input", handleInputChange));
        var range = $("input#range"),
            value = $(".range-value");
        value.html(range.attr("value"));
        range.on("input", function () {
            value.html(this.value);
        });




















        if (document.getElementById("typed")) {
            var typed = new Typed("#typed", {
                stringsElement: "#typed-strings",
                typeSpeed: 70,
                backSpeed: 50,
                backDelay: 600,
                startDelay: 100,
                shuffle: true,
                loop: true
            });
        }
        const tl = gsap.timeline({ defaults: { opacity: 0, ease: "power1.out" } });

        if (!localStorage.getItem('visited')) {

            tl.to(".lightCyan-slider", { x: "-10%", duration: 1 });
            tl.to(".persianGreen-slider", { x: "-20%", duration: 1.5 }, "-=1" );
            tl.to(".white-slider", { x: "-30%", duration: 1.5, }, "-=1"); 
            tl.to(".hide", { x: "0%", duration: 2, opacity: 1, });
            tl.to(".preloader", { x: "200%", duration: 3, });

            localStorage.setItem('visited', 'true');
        } else {
            $('.preloader').hide();
        }

        tl.from(".hero-header", { y: "-50", duration: 1 }, "<");
        tl.from(".hero-text", { y: "-50", duration: 1, delay: .7, autoAlpha: 0 }, "<");
        tl.from(".hero-button", { y: "-50", duration: 1, delay: .7, autoAlpha: 0 }, "<");


        $(document).ready(function () {
            var randomSlide = Math.floor(Math.random() * $('#hero_carousel .carousel-item').length);
            $('#hero_carousel').carousel(randomSlide);
            $('#hero_carousel').carousel('next');

            if (document.getElementsByClassName('glide')) {
                const glider = new Glide('.glide-featured', {
                    autoplay: 10000,
                    type: 'carousel',
                    perView: 5,
                    breakpoints: {
                        1650: {
                            perView: 4
                        },
                        1300: {
                            perView: 3
                        },
                        950: {
                            perView: 2
                        },
                        640: {
                            perView: 1
                        }
                    }
                });

                // The classname for the element that gets transformed
                const tiltableElement = '.glide__container';
                glider.mount();
            };
        });
    </script>
