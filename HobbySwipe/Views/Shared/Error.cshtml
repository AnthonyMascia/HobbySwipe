@model HobbySwipe.ViewModels.Shared.ErrorViewModel
@{
    ViewData["Title"] = "Error";
    ViewData["ErrorMessage"] = Model.ErrorMessage;
    ViewData["ReturnUrl"] = Model.ReturnURL;
}

<form id="ErrorForm" asp-area="" asp-controller="Home" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="get" class="center-absolute form-horizontal" role="form">
    @section Header {
        <div class="header red lighten-1 text-white text-center center-absolute">
            <div>
                <h1>Oops!</h1>
                <h3>Looks like something went wrong...</h3>
            </div>
        </div>
    }

    <div class="container-fluid">
        <div class="card card-cascade wider reverse my-0">
            <div class="card-body text-center">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <h3 class="text-danger">@ViewData["ErrorMessage"]</h3>
                    </div>
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-5 col-6">
                        @if (!string.IsNullOrEmpty(Model.ReturnURL))
                        {
                            <a href="@Model.ReturnURL" class="btn btn-danger">Return</a>
                        }
                        else
                        {
                            <button class="btn btn-danger">Return</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
